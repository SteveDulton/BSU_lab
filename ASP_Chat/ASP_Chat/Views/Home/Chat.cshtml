@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>SignalR chat</title>
    <link href="~/Content/Chat.css" rel="stylesheet" />
</head>
<body class="background-image">
    <header class="greeting" id="header"></header>
    <div class="main">
        <div class="screen-center">
            <div class="login-panel" id="loginBlock">
                <span>Log in to Chat</span>
                <input class="login-txtField" id="txtUserName" type="text" placeholder="login..." />
                <input class="btn-login" id="btnLogin" type="button" value="Log In" />
            </div>
        </div>
        <aside id="listOfUsers">
            <ul class="chat-users circled-input" id="chatusers"></ul>
        </aside>
        <section class="chat-body" id="chatBody">
            <div class="chat-window circled-input" id="chatroom"></div>
            <div class="send-panel" id="inputForm">
                <textarea class="text-test" id="message" placeholder="Write a message.."></textarea>
                <input class="btn-send" type="button" id="sendmessage" value="Send" />
            </div>
        </section>
        <input id="hdId" type="hidden" />
        <input id="username" type="hidden" />
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery.signalR-2.4.0.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/chat.js"></script>
</body>
</html>