@{
    ViewBag.Title = "About";
}

<style>
    div.panel-body {
        overflow: scroll;
        background: url(http://subtlepatterns.com/patterns/geometry2.png)
    }
</style>
<h2>Chat</h2>
<div class="chat-panel panel panel-default">
    <div class="panel-heading">
        ChatBox using SignalR
        <i class="fa fa-paper-plane fa-fw" />
    </div>

    <div class="panel-body" id="chat" style="height:250px;">
        <input type="hidden" id="displayname" />

        <p id="discussion"></p>
    </div>

    <div class="panel-footer">
        <div class="input-group">
            <input id="message" type="text" name="message" class="form-control input-sm" placeholder="Type your message here..." />

            <span class="input-group-btn">
                <input type="button" class="btn btn-warning btn-sm" id="sendmessage" value="Send" />
            </span>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/jquery.signalR-2.4.0.min.js"></script>
    <script src="~/SignalR/Hubs/"></script>

    <script>
        $(function () {
            var chat = $.connection.chatHub;

            chat.client.addNewMessageToPage = function (name, message) {
                if (name == "Admin") {
                    $('#discussion').append('<p style=color:green; text-align:left; width:500px"><strong><img src="http://rmg.zum.de/images/b/b4/Alice_grinsend.jpg" width="40" height="40" border-radius: 100%'
                        + ' </strong> ' + htmlEncode(message) + '</p>')
                }
                else if (name != "Admin") {
                    $('#discussion').append('<p style="color:blue; text-align:right;"><strong><img src = "http://rmg.zum.de/images/9/92/Bob_neutral.jpg" width="40" height="40" border-radius: 100%'
                        + ' </strong> ' + htmlEncode(message) + '</p>')
                }
            };
            $('#displayname').val(prompt('Enter your name:', ''));
            $('#message').focus();
            $.connection.hub.start().done(function () {
                $('#sendmessage').click(function () {
                    chat.server.send($('#displayname').val(), $('#message').val());
                    $('#message').val('').focus();
                });
            });
        });

        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>

}